@model ModelDepartamentoEmpleado

@{
    ViewData["Title"] = "Details";
    int numPagina = 1;
    int numRegistros = (int)ViewData["REGISTROS"];
}

<h1>Details</h1>

<h2 style="color:red">
    Registro @ViewData["POSICION"] de @ViewData["ULTIMO"]
</h2>

<div>
    <ul class="list-group list-group-horizontal">
        <li class="list-group-item">
            <a asp-controller="Paginacion"
               asp-action="Details"
               asp-route-id="@Model.Departamento.IdDepartamento"
               asp-route-posicion="1">
                Primero
            </a>
        </li>
        <li class="list-group-item">
            <a asp-controller="Paginacion"
               asp-action="Details"
               asp-route-id="@Model.Departamento.IdDepartamento"
               asp-route-posicion="@ViewData["ANTERIOR"]">
                Anterior
            </a>
        </li>
        <li class="list-group-item">
            <a asp-controller="Paginacion"
               asp-action="Details"
               asp-route-id="@Model.Departamento.IdDepartamento"
               asp-route-posicion="@ViewData["SIGUIENTE"]">
                Siguiente
            </a>
        </li>
        <li class="list-group-item">
            <a asp-controller="Paginacion"
               asp-action="Details"
               asp-route-id="@Model.Departamento.IdDepartamento"
               asp-route-posicion="@ViewData["ULTIMO"]">
                Último
            </a>
        </li>
    </ul>
</div>

<div>
    <h4>Departamento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Departamento.IdDepartamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Departamento.IdDepartamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Departamento.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Departamento.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Departamento.Localidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Departamento.Localidad)
        </dd>
    </dl>
</div>
<div>
    <h4>Empleado</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Empleado.IdEmpleado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Empleado.IdEmpleado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Empleado.Apellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Empleado.Apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Empleado.Oficio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Empleado.Oficio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Empleado.Salario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Empleado.Salario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Empleado.IdDepartamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Empleado.IdDepartamento)
        </dd>
    </dl>
</div>
